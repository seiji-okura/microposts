
<div class="panel panel-default">
  <div class="panel-heading">
    <%= gravatar_for @user %>
    <%= @user.name %>
  </div>

  <div class="panel-body">
    <%= form_for(@user, html: {class: 'none'}) do |f| %>
      <% if @user.errors.present? %>
        <div class="alert alert-danger">
        <%= alert %>
        <ul>
          <% @user.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
          <% end %>
        </ul>
        </div>
      <% end %>
      <div class="form-group">
        <div class="input-group">
          <span for="user_email" class="input-group-addon">EMAIL</span>
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span for="user_name" class="input-group-addon">名前</span>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span for="user_age" class="input-group-addon">年齢</span>
          <%= f.text_field :age, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span for="user_country" class="input-group-addon">国籍</span>
          <%= f.text_field :country, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span for="user_introduction" class="input-group-addon">自己紹介</span>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span for="user_url" class="input-group-addon">URL</span>
          <%= f.text_field :url, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.submit "プロフィール更新", class: "btn btn-sm btn-primary", title: "変更内容を保存します。" %>
      </div>
    <% end %>
  </div>
  
</div>
