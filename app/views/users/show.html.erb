<div class="row">
  <% if @user %>
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <ul class="list-group">
      <li class="list-group-item">
        <span class="badge"><%= @num_followings %></span>
        <%= link_to "Follows", followings_user_path %>
      </li>
      <li class="list-group-item">
        <span class="badge"><%= @num_followers %></span>
        <%= link_to "Followers", followers_user_path %>
      </li>
    </ul>
    <%= @user.feed_times %>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
  <% end %>
</div>
